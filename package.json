{
  "name": "vscode-nvim-ui",
  "repository": {
    "url": "https://github.com/kensleDev/vscode-nvim-ui"
  },
  "displayName": "vscode-nvim-ui",
  "description": "Change theme accent colors by changing NVim modes",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nvim-theme.normal",
        "title": "NVIM Normal"
      },
      {
        "command": "nvim-theme.insert",
        "title": "NVIM Insert"
      },
      {
        "command": "nvim-theme.visual",
        "title": "NVIM Visual"
      },
      {
        "command": "nvim-theme.replace",
        "title": "NVIM Replace"
      }
    ],
    "configuration": {
      "title": "nvim-ui",
      "properties": {
        "nvim-ui.nvimColorNormal": {
          "type": "string",
          "default": "#ffc600",
          "description": "Normal mode color"
        },
        "nvim-ui.nvimColorInsert": {
          "type": "string",
          "default": "#D32F2F",
          "description": "Insert mode color"
        },
        "nvim-ui.nvimColorVisual": {
          "type": "string",
          "default": "#673AB7",
          "description": "Visual mode color"
        },
        "nvim-ui.nvimColorReplace": {
          "type": "string",
          "default": "#000",
          "description": "Replace mode color"
        },
        "nvim-ui.nvimColorCustomizationKeys": {
          "type": "array",
          "default": [
            "statusBar.background"
          ],
          "description": "colorCustomization keys to change when changing modes"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "package": "vsce package",
    "compile": "pnpm run build && pnpm run package",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "zod": "^3.21.4"
  }
}